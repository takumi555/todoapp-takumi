.container
  %h2  Board
  = form_with model: @board do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, 'Description'
    %div
      = f.text_field :content, class: 'text'
    %div
      = f.submit 'Submit', class: 'btn-primary'