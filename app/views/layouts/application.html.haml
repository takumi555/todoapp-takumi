!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TodoappTakumi
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    .header
      .container
        = link_to 'Boards', root_path, class: 'board-title '
        - if user_signed_in?
          = link_to 'ログアウト', destroy_user_session_path, data: {method: 'DELETE'}, class: 'loginout btn btn-danger '
        - else 
          = link_to 'ログイン', new_user_session_path, class: 'loginout btn btn-danger'
  

    .container
      - if flash.present?
        .flash
          - flash.each do |key, value|
            %div{:class => key}= value

      = yield
